<launch>
  <arg name="lunar_env" default="env_simple.yaml"/>

  <param name="env_file" textfile="$(find distributed_planning)/data/$(arg lunar_env)"/>
  <param name="/run_sim" value="true"/>
  
  <rosparam command="load" file="$(find distributed_planning)/params/agent_params.yaml"/>

  <!-- NOTE: Always set one of these agents to have the token in this file. -->

  <node pkg="distributed_planning" type="agent_dmarrt.py" name="agent_1" output="screen">
    <param name="name_prefix" value="agent_1"/>
  </node>

  <node pkg="distributed_planning" type="agent_dmarrt.py" name="agent_2" output="screen">
    <param name="name_prefix" value="agent_2"/>
  </node>

  <node pkg="distributed_planning" type="agent_dmarrt.py" name="agent_3" output="screen">
    <param name="name_prefix" value="agent_3"/>
  </node>

  <node pkg="distributed_planning" type="agent_dmarrt.py" name="agent_4" output="screen">
    <param name="name_prefix" value="agent_4"/>
  </node>

  <node pkg="distributed_planning" type="agent_dmarrt.py" name="agent_5" output="screen">
    <param name="name_prefix" value="agent_5"/>
    <param name="has_token"   value="true"/>
  </node>

</launch>
